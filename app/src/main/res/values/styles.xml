<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TagBlockStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:background">@drawable/tag_block</item>
    </style>

    <style name="TagStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_5</item>
        <item name="android:layout_marginBottom">@dimen/space_5</item>
        <item name="android:layout_marginLeft">@dimen/space_10</item>
        <item name="android:layout_marginRight">@dimen/space_10</item>
        <item name="android:background">@drawable/tag_frame_unselected</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:paddingLeft">@dimen/space_10</item>
        <item name="android:paddingRight">@dimen/space_10</item>
        <item name="android:paddingTop">@dimen/space_5</item>
        <item name="android:paddingBottom">@dimen/space_5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TagNameStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_5</item>
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:layout_marginLeft">@dimen/space_10</item>
        <item name="android:layout_marginRight">@dimen/space_10</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:gravity">left</item>
    </style>

</resources>
